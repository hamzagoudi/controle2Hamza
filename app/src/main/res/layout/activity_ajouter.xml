<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ajouter">

    <EditText
        style="@style/txt_style"
        android:hint="Tapez le nom de la societe"
        android:layout_alignParentTop="true"
        android:id="@+id/txt_nom"/>
    <EditText
        style="@style/txt_style"
        android:hint="Tapez le secteur d'activite"
        android:layout_below="@id/txt_nom"
        android:id="@+id/txt_secteur"/>
    <EditText
        style="@style/txt_style"
        android:hint="Tapez le nombre d'employe"
        android:layout_below="@id/txt_secteur"
        android:id="@+id/txt_nb"/>
    <Button
        style="@style/btn_styleV2"
        android:text="@string/btn_save"
        android:id="@+id/btnaj"
        android:layout_below="@id/txt_nb"/>
    <Button
        style="@style/btn_styleV2"
        android:text="@string/btn_save"
        android:id="@+id/btn_cancelNewS"
        android:layout_alignBaseline="@id/btnaj"
        android:layout_toRightOf="@id/btnaj"/>

</RelativeLayout>